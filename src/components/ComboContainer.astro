---
import UpButton from "./UpButton.astro";

const { id } = Astro.props;
---

<section id={id} class="font-sans h-auto snap-start scroll-pt-2 py-1">
  <header>
    <div
      class="w-[90%] my-0 mx-auto flex justify-center items-center text-xs flex-wrap text-center space-x-2 select-none"
    >
      <p class="uppercase text-xl font-bold md:text-2xl lg:text-3xl">Sopas</p>
      <p class="text-yellow-400 uppercase text-xs md:text-sm lg:text-base">
        (Wantán-Pollo-Kión)
      </p>
      <div class="text-xs lg:text-sm">
        <p>Para llevar <span class=""> S/. 1.00 más</span></p>
      </div>
    </div>
  </header>

  <section class="relative my-4">
    <div
      class="w-min mb-8 py-2 px-4 sm:px-6 rounded-md bg-linear-to-r from-orange-300 to-yellow-400 text-xl sm:text-2xl md:text-3xl text-center font-bold space-y-4 my-0 mx-auto"
    >
      <h2 class="tracking-tight select-none">Combos</h2>
    </div>
    <slot />
  </section>
  <UpButton />
</section>
